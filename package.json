{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opendevnet",
  "version": "0.0.0",
  "private": true,
  "description": "The open-source social platform for developers to collaborate, find opportunities, and streamline workflows.",
  "bugs": {
    "url": "https://github.com/odnlabs/opendevnet/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odnlabs/opendevnet"
  },
  "license": "CC-BY-NC-SA-4.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "dotenv -e .env.production -- nx run-many --target=build --all --exclude=api --parallel --maxParallel=1",
    "build:api": "dotenv -e .env.production -- nx run-many --target=build --projects=api --parallel --maxParallel=1",
    "build:api:dev": "dotenv -e .env.local -- nx run-many --target=build --projects=api --parallel --maxParallel=1",
    "build:dev": "dotenv -e .env.local -- nx run-many --target=build --all --exclude=api --parallel --maxParallel=1",
    "dev": "dotenv -e .env.local -- nx run-many --target=dev --all",
    "dev:frontend": "dotenv -e .env.production -- nx run-many --target=dev --projects=internal,site,web",
    "dev:internal": "dotenv -e .env.local -- nx run-many --target=dev --projects=@odnlabs/ui,@odnlabs/utils-client,@odnlabs/utils-server,internal --parallel --maxParallel=4",
    "dev:site": "dotenv -e .env.local -- nx run-many --target=dev --projects=@odnlabs/api-client,@odnlabs/ui,@odnlabs/utils-client,@odnlabs/utils-server,site --parallel --maxParallel=5",
    "dev:web": "dotenv -e .env.local -- nx run-many --target=dev --projects=@odnlabs/api-client,@odnlabs/ui,@odnlabs/utils-client,@odnlabs/utils-server,web --parallel --maxParallel=5",
    "fix": "manypkg fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,json}\" --ignore-path=.prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,json}\" --ignore-path=.prettierignore",
    "postinstall": "manypkg check",
    "install:api": "nx run api:install",
    "lint": "nx run-many --target=lint --all --exclude=api",
    "lint:api": "nx run api:lint",
    "lint:fix": "nx run-many --target=lint --all --exclude=api -- --fix",
    "test": "nx run-many --target=test --all"
  },
  "dependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-angular": "^18.1.0",
    "@manypkg/cli": "^0.21.0",
    "@nx/devkit": "17.0.2",
    "@nx/eslint": "^17.0.2",
    "@nx/jest": "17.0.2",
    "@nx/js": "^17.0.2",
    "@nx/next": "^17.0.2",
    "@nx/plugin": "^17.0.2",
    "@nx/react": "^17.0.3",
    "@nx/workspace": "^17.0.2",
    "@swc-node/register": "~1.6.8",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.95",
    "@swc/helpers": "~0.5.3",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.52.0",
    "eslint-config-odn": "workspace:*",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nx": "^17.0.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=21.0.0",
    "pnpm": ">=8.10.0"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
