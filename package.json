{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opendevnet",
  "version": "0.0.0",
  "private": true,
  "description": "The open-source social platform for developers to collaborate, find opportunities, and streamline workflows.",
  "bugs": {
    "url": "https://github.com/odnlabs/opendevnet/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odnlabs/opendevnet"
  },
  "license": "CC-BY-NC-SA-4.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "dotenv -e .env.production -- nx run-many --target=build --all --parallel --maxParallel=1",
    "build:dev": "dotenv -e .env.local -- nx run-many --target=build --all --parallel --maxParallel=1",
    "commit": "commit",
    "dev": "dotenv -e .env.local -- nx run-many --target=dev --all",
    "dev:frontend": "dotenv -e .env.local -- nx run-many --target=dev --projects=internal-docs,website,web-client",
    "fix": "manypkg fix",
    "format": "prettier --write \"**/*.{mjs,cjs,js,jsx,ts,tsx,md,mdx,json,yaml,sh}\" --ignore-path=.prettierignore",
    "format:check": "prettier --check \"**/*.{mjs,cjs,js,jsx,ts,tsx,md,mdx,json,yaml,sh}\" --ignore-path=.prettierignore",
    "postinstall": "manypkg check",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "test": "nx run-many --target=test --all",
    "update": "pnpm update --recursive --latest --interactive"
  },
  "resolutions": {
    "remark-gfm": "3.0.1"
  },
  "dependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-angular": "^18.4.3",
    "@commitlint/prompt-cli": "^18.4.3",
    "@manypkg/cli": "^0.21.0",
    "@nx/devkit": "17.1.3",
    "@nx/eslint": "^17.1.3",
    "@nx/jest": "17.1.3",
    "@nx/js": "^17.1.3",
    "@nx/next": "^17.1.3",
    "@nx/react": "^17.1.3",
    "@nx/workspace": "^17.1.3",
    "@slekup/tsconfig": "1.0.0",
    "@types/node": "^20.9.4",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-slekup": "1.0.17",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nx": "^17.1.3",
    "prettier": "^3.1.0",
    "prettier-plugin-sh": "^0.13.1",
    "prettier-plugin-tailwindcss": "^0.5.7"
  },
  "packageManager": "pnpm@8.10.4",
  "engines": {
    "node": ">=21.0.0",
    "pnpm": ">=8.10.4"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
