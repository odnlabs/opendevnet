{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opendevnet",
  "version": "0.0.0",
  "private": true,
  "description": "The open-source social platform for developers to collaborate, find opportunities, and streamline workflows.",
  "bugs": {
    "url": "https://github.com/odnlabs/opendevnet/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odnlabs/opendevnet"
  },
  "license": "CC-BY-NC-SA-4.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "dotenv -e .env.production -- nx run-many --target=build --all --parallel --maxParallel=1",
    "build:dev": "dotenv -e .env.local -- nx run-many --target=build --all --parallel --maxParallel=1",
    "dev": "dotenv -e .env.local -- nx run-many --target=dev --all",
    "dev:frontend": "dotenv -e .env.local -- nx run-many --target=dev --projects=internal_docs,site,web-client",
    "fix": "manypkg fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,json}\" --ignore-path=.prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,json}\" --ignore-path=.prettierignore",
    "postinstall": "manypkg check",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "test": "nx run-many --target=test --all"
  },
  "resolutions": {
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0"
  },
  "dependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-angular": "^18.1.0",
    "@manypkg/cli": "^0.21.0",
    "@nx/devkit": "17.0.3",
    "@nx/eslint": "^17.0.3",
    "@nx/jest": "17.0.3",
    "@nx/js": "^17.0.3",
    "@nx/next": "^17.0.3",
    "@nx/react": "^17.0.3",
    "@nx/workspace": "^17.0.3",
    "@types/node": "^20.9.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "eslint-config-odn": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nx": "^17.0.3",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=21.0.0",
    "pnpm": ">=8.10.0"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
