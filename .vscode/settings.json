{
  // VS Code
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": false
  },
  "editor.trimAutoWhitespace": false,
  "files.associations": {
    "*.mdx": "markdown"
  },
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  // Rust Analyzer
  "rust-analyzer.linkedProjects": [".\\apps\\api\\Cargo.toml"],
  "rust-analyzer.showUnlinkedFileNotification": false,
  // Eslint
  "eslint.workingDirectories": [
    {
      "pattern": "./apps/*"
    },
    {
      "pattern": "./libs/*"
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // YAML
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "file:///d%3A/github/opendevnet/.github/workflows/deploy.yml",
    "https://json.schemastore.org/github-issue-config.json": "file:///d%3A/github/opendevnet/.github/ISSUE_TEMPLATE/config.yml"
  },
  // Rest Client
  "rest-client.environmentVariables": {
    "$shared": {
      "host": "http://localhost:5000/api"
    }
  },
  "rest-client.showResponseInDifferentTab": true
}
