{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@components/layout": ["./src/components/layout"],
      "@constants/*": ["./src/constants/*"],
      "@slices/*": ["./src/slices/*"],
      "@store": ["./src/store.ts"],
      "@styles/*": ["./src/styles/*"],
      "@typings/*": ["./src/typings/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "extends": "@slekup/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../dist/apps/web-client/.next/types/**/*.ts"
  ]
}
