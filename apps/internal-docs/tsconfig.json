{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@slekup/tsconfig/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@store": ["src/store.ts"],
      "@constants/*": ["src/constants/*"],
      "@components": ["src/components"],
      "@components/layout": ["src/components/layout"],
      "@styles/*": ["src/styles/*"],
      "@slices/*": ["src/slices/*"],
      "@typings/*": ["src/typings/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "*.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
