{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@config": ["../site/src/config.ts"],
      "@constants/*": ["./src/constants/*"],
      "@components": ["./src/components"],
      "@components/layout": ["./src/components/layout"],
      "@styles/*": ["./src/styles/*"],
      "@slices/*": ["../site/src/slices/*"],
      "@typings/*": ["./src/typings/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../site/src/config.ts"
  ],
  "exclude": ["node_modules"]
}
