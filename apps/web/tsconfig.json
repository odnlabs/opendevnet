{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@odnlabs/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@store": ["./src/store.ts"],
      "@constants/*": ["./src/constants/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@components/layout": ["./src/components/layout"],
      "@styles/*": ["./src/styles/*"],
      "@slices/*": ["./src/slices/*"],
      "@typings/*": ["./src/typings/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../environment.d.ts"
  ],
  "exclude": ["node_modules"]
}
