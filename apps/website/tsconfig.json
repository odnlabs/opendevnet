{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@slekup/tsconfig/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@slices/*": ["src/slices/*"],
      "@store": ["src/store.ts"],
      "@styles/*": ["src/styles/*"],
      "@typings/*": ["src/typings/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "*.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "e2e/**/*.test.ts",
    ".next/types/**/*.ts",
    "e2e/page.test.tsx"
  ]
}
